PORT=5000
MONGODB_URI=mongodb://localhost:27017/audit-portal
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ==============================================
# IPFS STORAGE CONFIGURATION
# ==============================================
# Choose ONE or more providers for IPFS storage
# System tries: Tatum -> Pinata -> Web3.Storage -> NFT.Storage

# Option 1: Tatum (Primary) - 50MB/month free
# Get API key: https://dashboard.tatum.io/
TATUM_API_KEY=

# Option 2: Pinata (Fallback) - 1GB free
# Get API keys: https://app.pinata.cloud/
PINATA_API_KEY=
PINATA_SECRET_KEY=

# Option 3: Web3.Storage (Alternative) - Unlimited free
# Get token: https://web3.storage/
WEB3_STORAGE_TOKEN=

# Option 4: NFT.Storage (Alternative) - Unlimited free
# Get token: https://nft.storage/
NFT_STORAGE_TOKEN=

# ==============================================
# TELEGRAM BOT CONFIGURATION
# ==============================================
# Create bot with @BotFather on Telegram

# Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=

# Bot Username (without @)
TELEGRAM_BOT_USERNAME=

# Your Telegram User ID (get from @userinfobot)
TELEGRAM_ADMIN_USER_ID=

# Webhook URL (production only)
TELEGRAM_WEBHOOK_URL=
